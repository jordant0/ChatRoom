<%= form_for(@message, html: {class: 'form-inline'}) do |f| %>
  <div class="form-group">
    <%= f.label :username, class: 'sr-only' %>
    <%= f.text_field :username, placeholder: 'username', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, placeholder: 'message', row: 1, class: 'form-control' %>
  </div>
  <%= f.button('Post', class: 'btn btn-primary') %>
<% end %>
